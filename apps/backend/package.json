{
  "$schema": "https://json.schemastore.org/package",
  "name": "task-marker-backend",
  "version": "1.0.0",
  "description": "Backend of Task Marker for AI Ticketing System using Inngest",
  "main": "index.js",
  "scripts": {
    "build": "ts-node build.ts",
    "start:dev": "cross-env ts-node -r tsconfig-paths/register src/index.ts",
    "start:prod": "cross-env NODE_ENV=production node dist/index.js",
    "dev": "cross-env concurrently \"tsc -w\" \"nodemon --exec ts-node -r tsconfig-paths/register src/index.ts\" \"npx inngest-cli@latest dev -u http://localhost:4120/api/inngest\"",
    "inngest:dev": "npx inngest-cli@latest dev -u http://localhost:4120/api/inngest"
  },
  "keywords": [
    "AI",
    "Ticketing",
    "System",
    "Inngest",
    "Backend",
    "Node.js",
    "Express",
    "MongoDB"
  ],
  "author": "qwertuhh",
  "license": "MIT",
  "references": [
    {
      "path": "../../shared"
    }
  ],
  "type": "commonjs",
  "dependencies": {
    "@inngest/agent-kit": "^0.8.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "inngest": "^3.38.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.15.1",
    "nodemailer": "^7.0.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/copy": "^0.3.5",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^22.15.28",
    "@types/nodemailer": "^6.4.17",
    "concurrently": "^9.1.2",
    "copy": "^0.3.2",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.10",
    "post-imports": "^1.3.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "postImports": {
    "root": "./dist",
    "type": "cjs",
    "ignore": [
      "**/*.js"
    ],
    "file": [
      {
        "path": "./utils/logger.utils.js",
        "toChange": "../../../../shared/logger",
        "toChangeFrom": "../shared/logger"
      }
    ]
  }
}
