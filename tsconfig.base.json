{
  "compilerOptions": {
    "target": "es6",
    "module": "nodenext",
    "outDir": "dist",
    "rootDir": "apps",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "$/*": ["./*"]
    }
  },
  "include": ["apps/frontend/src/*"],
  "exclude": ["dist", "node_modules"]
}
